{
  "compilerOptions": {
    "target": "es2022",
    "types": ["node"],
    "skipLibCheck": true,
    "lib": [
      "esnext.asynciterable",
      "dom",
      "es6",
      "dom.iterable",
      "scripthost",
    ],
    "module": "esnext",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/*"
  ]
}
